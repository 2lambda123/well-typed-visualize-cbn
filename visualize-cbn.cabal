name:                visualize-cbn
version:             0.1.0.0
-- synopsis:
-- description:
license:             BSD3
license-file:        LICENSE
author:              Edsko de Vries
maintainer:          edsko@well-typed.com
-- copyright:
category:            Development
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

executable visualize-cbn
  main-is:             Main.hs
  other-modules:       CBN.Eval
                       CBN.Free
                       CBN.Heap
                       CBN.Language
                       CBN.Options
                       CBN.Parser
                       CBN.Pretty.Doc
                       CBN.Pretty.HTML
                       CBN.Pretty.Precedence
                       CBN.Subst
                       CBN.Trace
                       CBN.Trace.JavaScript
                       CBN.Trace.Textual
                       CBN.Util.Map
                       CBN.Util.Snoc
  build-depends:       base >=4.8 && <4.9
                     , ansi-wl-pprint
                     , blaze-html
                     , blaze-markup
                     , containers
                     , optparse-applicative
                     , parsec
                     , template-haskell
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  DeriveDataTypeable
                       ExistentialQuantification
                       LambdaCase
                       RecordWildCards
                       ScopedTypeVariables
                       StandaloneDeriving
  other-extensions:    GeneralizedNewtypeDeriving
                       OverloadedStrings
                       TemplateHaskell
  ghc-options:         -Wall
                       -fno-warn-orphans
                       -rtsopts
                       "-with-rtsopts=-M128M"
